  %body

  %div#all_content
    %h3.main_title 
      Lunch Huddle

    %div.section
      huddle: #{@huddle}
      %form(action="/")
        name: 
        %input#txtName{:type => "text"}
        %br

        email address: 
        %input#txtEmailAddr{:type => "text"}
        %br

        huddle: 
        %input#txtHuddleName{:name => "huddle",
                             :type => "text"}

        %input#joinHuddle{:type => "button",
                          :value => "join huddle"}
