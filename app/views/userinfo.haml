%html
  %head
    %link(rel="stylesheet" href="css/styles.css")
    %script{:type => "text/javascript", :src =>"javascripts/jquery-1.6.1.min.js"}
    %script{:type => "text/javascript", :src =>"javascripts/underscore.min.js"}
    %script{:type => "text/javascript", :src =>"javascripts/util.jquery.js"}
    %script{:type => "text/javascript", :src =>"javascripts/UserInfo.js"}
    %script{:type => "text/javascript", :src =>"javascripts/DataStore.js"}
